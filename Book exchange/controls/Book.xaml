<UserControl x:Class="Book_exchange.controls.Book"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_exchange.controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="115">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Margin="12, 5" CornerRadius="5">
            <Border.Background>
                <ImageBrush Stretch="Fill" ImageSource="/Images/basic book.jpg"/>
            </Border.Background>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</UserControl>
